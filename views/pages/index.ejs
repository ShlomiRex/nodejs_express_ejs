<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
    <div class="jumbotron">
        <h1>This is great</h1>
        <p>Welcome to templating using EJS</p>
    </div>

    <h2>Variable</h2>
<p><%= tagline %></p>

<h2>Loop</h2>

<ul>

</ul>

<table border="1">
    <% drinks.forEach(function(drink) { %>
        <tr>
            <td>
                <%= drink.drunkness %>
            </td>
            <td>
                <%= drink.name %>  
            </td>
        </tr>
    <% }); %>
</table>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>